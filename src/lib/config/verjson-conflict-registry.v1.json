  "title": "VerJSON Conflict Resolution Registry",
  "version": "1.2.0",
  "conflicts": {
    "$schema_version_mismatch": {
      "severity": "high",
      "resolutions": [
        "current",
        "incoming",
        "custom",
        "unresolved"
      ],
      "manualReview": true,
      "preferences": [
        "schemaVersionStrategy"
      ],
      "description": "Different $schema versions at {path}: current uses {current}, incoming uses {incoming}. Choose a metaschema to validate the merged output."
    },
    "id_base_uri_changed": {
      "severity": "medium",
      "resolutions": [
        "current",
        "incoming",
        "custom",
        "unresolved"
      ],
      "manualReview": true,
      "preferences": [
        "refNormalization"
      ],
      "description": "Base identifier/URI changed at {path}: {oldUri} → {newUri}. This may alter $ref resolution."
    },
    "ref_target_changed": {
      "severity": "critical",
      "resolutions": [
        "current",
        "incoming",
        "custom",
        "unresolved"
      ],
      "manualReview": true,
      "preferences": [
        "refNormalization"
      ],
      "description": "$ref at {path} resolves to different targets under current vs incoming contexts: {ref}. Check base URI changes or anchors."
